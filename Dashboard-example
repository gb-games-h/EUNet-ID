  <script>
    function saveUsername() {
      const input = document.getElementById('username');
      const notice = document.getElementById('usernameNotice');
      const newName = input.value.trim();

      if (newName.length < 3) {
        notice.textContent = 'Der Nutzername muss mindestens 3 Zeichen haben.';
        notice.style.color = 'red';
        return;
      }

      // Hier würde normalerweise ein API-Call zum Server erfolgen

      notice.textContent = 'Nutzername wurde gespeichert!';
      notice.style.color = 'green';

      setTimeout(() => {
        notice.textContent = '';
      }, 3000);
    }

    function removePlatform(button) {
      if (confirm('Möchtest du diese Plattform wirklich entfernen?')) {
        const row = button.closest('tr');
        row.remove();
      }
    }
  </script>
